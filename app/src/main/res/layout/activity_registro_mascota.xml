<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroMascotaActivity">

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registro mascota"
        app:layout_constraintEnd_toEndOf="@+id/btn_back_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_back_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_registro_mascota" />

    <ImageButton
        android:id="@+id/btn_back_registro_mascota"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backveterinaria" />

    <EditText
        android:id="@+id/edt_nombre_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Ingrese el nombre de su mascota"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView61"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView61"
        app:layout_constraintTop_toBottomOf="@+id/textView61" />

    <EditText
        android:id="@+id/edt_fecha_nac_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Seleccione la fecha de nacimiento"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView62"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView62"
        app:layout_constraintTop_toBottomOf="@+id/textView62" />

    <EditText
        android:id="@+id/edt_edad_masc_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Ingrese la edad de su mascota"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView63"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView63"
        app:layout_constraintTop_toBottomOf="@+id/textView63" />

    <EditText
        android:id="@+id/edt_raza_masc_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Ingrese la raza de su mascota"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView64"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView64"
        app:layout_constraintTop_toBottomOf="@+id/textView64" />

    <EditText
        android:id="@+id/edt_especie_masc_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Ingrese la especie de su mascota"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView65"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView65"
        app:layout_constraintTop_toBottomOf="@+id/textView65" />

    <EditText
        android:id="@+id/edt_peso_masc_registro_mascota"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Ingrese el peso de su mascota"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView66"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView66"
        app:layout_constraintTop_toBottomOf="@+id/textView66" />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/textView60"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView60"
        app:layout_constraintTop_toBottomOf="@+id/textView60" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Fecha de nacimiento "
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_registro_mascota" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Edad (aÃ±os)"
        app:layout_constraintEnd_toEndOf="@+id/edt_fecha_nac_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_fecha_nac_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_fecha_nac_registro_mascota" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Raza"
        app:layout_constraintEnd_toEndOf="@+id/edt_edad_masc_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_edad_masc_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_edad_masc_registro_mascota" />

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Especie"
        app:layout_constraintEnd_toEndOf="@+id/edt_raza_masc_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_raza_masc_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_raza_masc_registro_mascota" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Peso (Kg)"
        app:layout_constraintEnd_toEndOf="@+id/edt_especie_masc_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_especie_masc_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_especie_masc_registro_mascota" />

    <Button
        android:id="@+id/btn_registrar_mascota"
        android:layout_width="366dp"
        android:layout_height="41dp"
        android:layout_marginTop="5dp"
        android:text="REGISTRAR"
        app:layout_constraintEnd_toEndOf="@+id/edt_peso_masc_registro_mascota"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_peso_masc_registro_mascota"
        app:layout_constraintTop_toBottomOf="@+id/edt_peso_masc_registro_mascota" />
</androidx.constraintlayout.widget.ConstraintLayout>