<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_inicio_secion_admin"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:backgroundTint="#EF9292"
        android:drawableTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        android:text="iniciar sesiÃ³n"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btn_registro_admin"
        android:layout_width="187dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#CF2626"
        android:text="REGISTRARSE"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="398dp"
        android:layout_height="539dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoveterinaria" />

    <Spinner
        android:id="@+id/sp_inicio_sesion"
        android:layout_width="158dp"
        android:layout_height="19dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_inicio_secion_admin"
        app:layout_constraintEnd_toEndOf="@+id/btn_inicio_secion_admin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_inicio_secion_admin"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/sp_registro"
        android:layout_width="162dp"
        android:layout_height="19dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_registro_admin"
        app:layout_constraintEnd_toEndOf="@+id/btn_registro_admin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_registro_admin"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>